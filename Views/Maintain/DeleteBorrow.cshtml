@model u20515822_HW03.Models.borrows

@{
    ViewBag.Title = "Delete Borrow";
}

<h2>Delete Borrow</h2>
<h3>Are you sure you want to delete this borrow?</h3>

<div>
    <h4>Borrow</h4>
    <hr />
    <dl class="dl-horizontal">
        <!-- Display borrow details here -->
    </dl>

    @using (Html.BeginForm("DeleteBorrowConfirmed", "Maintain", new { id = Model.borrowId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-default" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>

