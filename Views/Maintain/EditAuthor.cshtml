@model u20515822_HW03.Models.StudentBookViewModel

<h2>Edit Author</h2>

@using (Html.BeginForm("EditAuthor", "Maintain", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Author.authorId)
    <div class="form-group">
        @Html.LabelFor(model => model.Author.name, "Author Name")
        @Html.EditorFor(model => model.Author.name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Author.surname, "Author Surname")
        @Html.EditorFor(model => model.Author.surname, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
