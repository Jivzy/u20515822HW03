@model u20515822_HW03.Models.borrows

@{
    ViewBag.Title = "Create Borrows";
}

<h2>Create Borrow Entry</h2>

@using (Html.BeginForm("CreateBorrow", "Maintain", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.takenDate)
        @Html.EditorFor(model => model.takenDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.broughtDate)
        @Html.EditorFor(model => model.broughtDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
}
